{#
/**
 * @file
 * Template for SodaScsComponent entity - Triplestore bundle.
 *
 * This template is specifically for triplestore components.
 * It will be used when the bundle is 'soda_scs_triplestore_component'.
 */
#}
<article{{ attributes.addClass('soda-scs-manager--component', 'soda-scs-manager--component--triplestore') }}>
  <div class="soda-scs-manager--triplestore-header bg-gradient-to-r from-lime-50 to-emerald-50 p-4 rounded-lg">
    <div class="flex items-center gap-3">
      {% if entity.hasField('imageUrl') and entity.imageUrl.value %}
        <img src="{{ file_url(entity.imageUrl.value) }}" alt="{{ entity.label }}" class="w-12 h-12" />
      {% endif %}
      <div>
        <h2 class="soda-scs-manager--component-title text-xl font-semibold text-emerald-800">
          {{ entity.label }}
        </h2>
        <p class="text-sm text-emerald-600">{{ 'Graph Database for RDF Data'|t }}</p>
      </div>
    </div>
  </div>
  
  <div class="soda-scs-manager--triplestore-content mt-4">
    {% if content.description %}
      <div class="soda-scs-manager--field-description mb-3">
        {{ content.description }}
      </div>
    {% endif %}
    
    {% if content.tags %}
      <div class="soda-scs-manager--triplestore-tags mb-4">
        <h3 class="text-sm font-medium text-gray-700 mb-2">{{ 'Tags'|t }}</h3>
        {{ content.tags }}
      </div>
    {% endif %}
    
    {# Special triplestore-specific information #}
    <div class="soda-scs-manager--triplestore-info bg-emerald-50 p-3 rounded border-l-4 border-emerald-400">
      <h4 class="font-medium text-emerald-800 mb-2">{{ 'Triplestore Features'|t }}</h4>
      <ul class="text-sm text-emerald-700 space-y-1">
        <li>• {{ 'SPARQL Query Support'|t }}</li>
        <li>• {{ 'RDF Data Storage'|t }}</li>
        <li>• {{ 'Ontology Management'|t }}</li>
        <li>• {{ 'Knowledge Graph Capabilities'|t }}</li>
      </ul>
    </div>
    
    {# Render other fields #}
    {% for field_name, field in content if field_name not in ['description', 'tags', 'imageUrl'] %}
      {{ field }}
    {% endfor %}
  </div>
  
  <div class="soda-scs-manager--triplestore-actions mt-4 pt-4 border-t border-gray-200">
    <div class="flex gap-2">
      <button class="btn btn-primary btn-sm">{{ 'Query Interface'|t }}</button>
      <button class="btn btn-secondary btn-sm">{{ 'Import Data'|t }}</button>
      <button class="btn btn-outline btn-sm">{{ 'Export Data'|t }}</button>
    </div>
  </div>
</article>
