{{ entity_type|replace({'soda_scs_': ''}) }}
<div class="soda-scs-manager--type--card flex flex-col mx-auto opacity-90 bg-slate-950 hover:bg-opacity-40 border-2 border-stone-200 border-cyan-500 rounded-lg p-4 transition-all duration-300">
  <div class="image-wrapper bg-stone-200 rounded-lg p-2">
    <img class="card-img-top p-3 mx-auto d-block" src="{{ file_url(imageUrl) }}" alt="{{ label }}" style="max-width: 200px;">
  </div>
  <div class="card-body text-center flex flex-col justify-center">
    <h5 class="soda-scs-manager--card-title m-auto text-center flex-1 text-stone-200 font-bold mb-4 flex items-center justify-center text-6xl">{{ title }}</h5>
    <a href="{{ url }}" class="btn flex-1 justify-center text-center items-center flex bg-teal-500 hover:bg-opacity-80 text-stone-200 font-bold py-2 px-4 rounded transition-all duration-300 h-1/8 text-6xl">
      MORE INFO
    </a>
  </div>
</div>
