/* Layout Components */
/* These styles define layout structure components */

@layer components {
  /* Component layout - 6 columns total */
  .soda-scs-manager--component--default {
    @apply grid grid-cols-6 gap-4;
  }

  /* Component header layout - spans 4 columns in the middle (columns 2-5) */
  .soda-scs-manager--component--header {
    @apply grid grid-cols-4 col-span-4 col-start-2 gap-4;
  }

  /* Component header left column - 2 columns within header */
  .soda-scs-manager--component--header--left {
    @apply col-span-2;
  }

  /* Component header right column - 2 columns within header */
  .soda-scs-manager--component--header--right {
    @apply col-span-2 grid grid-rows-2 gap-2;
  }

  /* Header row within left column (thumbnail + title) */
  .soda-scs-manager--component--header-row {
    @apply flex items-center gap-4;
  }

  /* Machine name row in right column */
  .soda-scs-manager--component--machine-name-row {
    @apply flex items-center;
  }

  /* Health row in right column */
  .soda-scs-manager--component--health-row {
    @apply flex items-center;
  }

  /* Description row - spans full header width */
  .soda-scs-manager--component--description-row {
    @apply col-span-4;
  }

  /* Tags row - spans full header width */
  .soda-scs-manager--component--tags-row {
    @apply col-span-4;
  }

  /* Component title styling */
  .soda-scs-manager--component--title {
    @apply text-xl font-semibold text-gray-900 m-0;
  }

  /* Component health styling */
  .soda-scs-manager--component--health {
    @apply flex items-center;
  }

  /* Component thumbnail styling */
  .soda-scs-manager--component--thumbnail {
    @apply flex-shrink-0;
  }

  /* Component machine name styling */
  .soda-scs-manager--component--machine-name {
    @apply text-sm text-gray-600;
  }

  /* Component description styling */
  .soda-scs-manager--component--description {
    @apply text-gray-700 mt-2;
  }

  /* Component tags styling */
  .soda-scs-manager--component--tags {
    @apply mt-2;
  }

  /* Component main layout */
  .soda-scs-manager--component--main {
    @apply grid grid-cols-6 gap-4 col-span-6;
  }

  /* Component left column layout */
  .soda-scs-manager--component--left-column {
    @apply col-span-4;
  }

  /* Component right column layout */
  .soda-scs-manager--component--right-column {
    @apply col-span-2;
  }

  /* Component info layout */
  .soda-scs-manager--component--info {
    @apply col-span-4;
  }

  /* Component service key layout */
  .soda-scs-manager--component--service-key {
    @apply col-span-2;
  }

  /* Component snapshots layout */
  .soda-scs-manager--component--snapshots {
    @apply col-span-2;
  }

  /* Component footer layout */
  .soda-scs-manager--component--footer {
    @apply col-span-4;
  }

  /* Component created layout */
  .soda-scs-manager--component--created {
    @apply col-span-2;
  }

  /* Component updated layout */
  .soda-scs-manager--component--updated {
    @apply col-span-2;
  }

  /* Component owner layout */
  .soda-scs-manager--component--owner {
    @apply col-span-2;
  }
}

